<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
							http://www.springframework.org/schema/aop
							http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">
	<!-- example wiring beans -->
    <bean id="knight" class="ch01.com.springinaction.knights.BraveKnight">
        <constructor-arg ref="quest"/>
        <constructor-arg ref="minstrel"/>
    </bean>
    <bean id="quest" class="ch01.com.springinaction.knights.RescueDamselQuest"/>
    <bean id="minstrel" class="ch01.com.springinaction.knights.Minstrel"></bean>
    
    <!-- configuracion AOP -->
    <aop:config>
    	<aop:aspect ref="minstrel">
    		<aop:pointcut id="embark" expression="execution(* *.embarkOnQuest(..))" />
    		<aop:before pointcut-ref="embark" method="singBeforeQuest"/>
    		<aop:after pointcut-ref="embark" method="singAfterQuest"/>
    	</aop:aspect>
    </aop:config>
</beans>