<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="knight" class="org.spring._01_._1_1_2.BraveKnight">
        <constructor-arg ref="quest"/>
    </bean>

    <bean id="knight-minstrel" class="org.spring._01_._1_1_2.BraveKnight02">
        <constructor-arg ref="quest"/>
        <constructor-arg ref="minstrel"/>
    </bean>

    <bean id="quest" class="org.spring._01_._1_1_2.RescueDamselQuest"/>
    <bean id="minstrel" class="org.spring._01_._1_1_2.Minstrel"/>
</beans>